
{
    "name": "fabric-query",
    "version": "1.0.0",
    "type": "flogo:activity",
    "title": "Query",
    "author": "TIBCO Software Inc.",
    "display": {
        "category": "fabric",
        "visible": true,
        "smallIcon": "ic-query.png",
        "description": "This activity fetches data by rich query on fabric Couch DB"
    },
    "ref": "github.com/TIBCOSoftware/dovetail-contrib/hyperledger-fabric/fabric/activity/query",
    "homepage": "http://github.com/TIBCOSoftware/dovetail-contrib/hyperledger-fabric/fabric/activity/query",
    "inputs": [
        {
            "name": "query",
            "type": "string",
            "display": {
                "name": "Query Statement",
                "description": "Rich query statement with parameters prefixed by '$', e.g. {\r\n  \"selector\": {\r\n  \"docType\":\"marble\",\r\n  \"owner\":\"$owner\"\r\n  }\r\n}",
                "type": "texteditor",
                "syntax": "json"
            }
        },
        {
            "name": "queryParams",
            "type": "complex_object",
            "display": {
                "type": "params",
                "name": "Query Parameters",
                "description": "The parameters used by the query statement",
                "mappable": true,
                "schema": "{\"type\":\"array\",\"items\":{\"type\":\"object\",\"properties\":{\"parameterName\":{\"type\":\"string\"},\"type\":{\"type\":{\"enum\":[\"string\",\"number\",\"boolean\"]}}}}}"
            }
        },
        {
            "name": "usePagination",
            "type": "boolean",
            "required": true,
            "display": {
                "name": "Use pagination",
                "description": "Specify result page size and starting bookmark"
            },
            "value": false
        },
        {
            "name": "pageSize",
            "type": "number"
        },
        {
            "name": "start",
            "type": "string"
        },
        {
            "name": "commonData",
            "type": "object",
            "display": {
                "name": "Common data definition",
                "description": "Select common data collection",
                "type": "connection",
                "visible": true
            },
            "allowed":[]
        },
        {
            "name": "dataType",
            "type": "string",
            "display":{
                "name": "Data object type",
                "description": "Select output data schema",
                "type": "dropdown",
                "selection": "single",
                "visible": false
            },
            "allowed": []
        },
        {
            "name": "privateCollection",
            "type": "string",
            "required": false
        }
    ],
    "outputs": [
        {
            "name": "code",
            "type": "integer"
        },
        {
            "name": "message",
            "type": "string"
        },
        {
            "name": "bookmark",
            "type": "string"
        },
        {
            "name": "count",
            "type": "integer"
        },
        {
            "name": "result",
            "type": "complex_object",
            "display": {
                "name": "Result array definition",
                "description": "Schema definition of the resulting array of key and value, e.g.,\r\n[{\r\n  \"key\": \"string\",\r\n  \"value\": {\"field1\": \"\", \"field2\": 0}\r\n}]",
                "type": "texteditor",
                "syntax": "json",
                "readonly": false
            }
        }
    ]
}
