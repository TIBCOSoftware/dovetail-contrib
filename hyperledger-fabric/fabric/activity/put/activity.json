{
    "name": "fabric-put",
    "version": "1.0.0",
    "type": "flogo:activity",
    "title": "Put",
    "author": "TIBCO Software Inc.",
    "display": {
        "category": "fabric",
        "visible": true,
        "smallIcon": "ic-put.png",
        "description": "This activity stores data to fabric ledger"
    },
    "ref": "github.com/TIBCOSoftware/dovetail-contrib/hyperledger-fabric/fabric/activity/put",
    "homepage": "http://github.com/TIBCOSoftware/dovetail-contrib/hyperledger-fabric/fabric/activity/put",
    "inputs": [
        {
            "name": "key",
            "type": "string",
            "required": true
        },
        {
            "name": "commonData",
            "type": "object",
            "display": {
                "name": "Common data definition",
                "description": "Select common data collection",
                "type": "connection",
                "visible": true
            },
            "allowed":[]
        },
        {
            "name": "dataType",
            "type": "string",
            "display":{
                "name": "Data object type",
                "description": "Select input data schema",
                "type": "dropdown",
                "selection": "single",
                "visible": false
            },
            "allowed": []
        },
        {
            "name": "data",
            "type": "complex_object",
            "required": true,
            "display": {
                "name": "Data object definition",
                "description": "Schema of state data, e.g.,\r\n{\r\n  \"param1\": \"string\",\r\n  \"param2\": {\"field1\": 0}\r\n}",
                "type": "texteditor",
                "syntax": "json",
                "mappable": true
            }
        },
        {
            "name": "privateCollection",
            "type": "string",
            "required": false
        },
        {
            "name": "keyType",
            "type": "string",
            "display":{
                "name": "Composite key type",
                "description": "Select composite key definition",
                "type": "dropdown",
                "selection": "single",
                "visible": false
            },
            "allowed": []
        },
        {
            "name": "compositeKeys",
            "type": "string",
            "display": {
                "name": "Composite keys",
                "description": "Define composite key name and attributes (Note: the state key will be appended if it is not included here), e.g. {\r\n    \"index-color\": [\"color\", \"name\"],\r\n    \"index-owner\": [\"owner\", \"name\"]\r\n}",
                "type": "texteditor",
                "syntax": "json",
                "readonly": false
            }
        }
    ],
    "outputs": [
        {
            "name": "code",
            "type": "integer"
        },
        {
            "name": "message",
            "type": "string"
        },
        {
            "name": "key",
            "type": "string"
        },
        {
            "name": "result",
            "type": "complex_object"
        }
    ]
}
