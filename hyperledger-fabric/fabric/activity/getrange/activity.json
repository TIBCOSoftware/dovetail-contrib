
{
    "name": "fabric-getrange",
    "version": "1.0.0",
    "type": "flogo:activity",
    "title": "Get Range",
    "author": "TIBCO Software Inc.",
    "display": {
        "category": "fabric",
        "visible": true,
        "smallIcon": "ic-range.png",
        "description": "This activity fetches data by range of keys from fabric ledger"
    },
    "ref": "github.com/TIBCOSoftware/dovetail-contrib/hyperledger-fabric/fabric/activity/getrange",
    "homepage": "http://github.com/TIBCOSoftware/dovetail-contrib/hyperledger-fabric/fabric/activity/getrange",
    "inputs": [
        {
            "name": "startKey",
            "type": "string",
            "required": true
        },
        {
            "name": "endKey",
            "type": "string",
            "required": true
        },
        {
            "name": "usePagination",
            "type": "boolean",
            "required": true,
            "display": {
                "name": "Use pagination",
                "description": "Specify result page size and starting bookmark"
            },
            "value": false
        },
        {
            "name": "pageSize",
            "type": "number"
        },
        {
            "name": "start",
            "type": "string"
        },
        {
            "name": "commonData",
            "type": "object",
            "display": {
                "name": "Common data definition",
                "description": "Select common data collection",
                "type": "connection",
                "visible": true
            },
            "allowed":[]
        },
        {
            "name": "dataType",
            "type": "string",
            "display":{
                "name": "Data object type",
                "description": "Select output data schema",
                "type": "dropdown",
                "selection": "single",
                "visible": false
            },
            "allowed": []
        },
        {
            "name": "privateCollection",
            "type": "string",
            "required": false
        }
    ],
    "outputs": [
        {
            "name": "code",
            "type": "integer"
        },
        {
            "name": "message",
            "type": "string"
        },
        {
            "name": "bookmark",
            "type": "string"
        },
        {
            "name": "count",
            "type": "integer"
        },
        {
            "name": "result",
            "type": "complex_object",
            "display": {
                "name": "Result array definition",
                "description": "Schema definition of the resulting array of key and value, e.g.,\r\n[{\r\n  \"key\": \"string\",\r\n  \"value\": {\"field1\": \"\", \"field2\": 0}\r\n}]",
                "type": "texteditor",
                "syntax": "json",
                "readonly": false
            }
        }
    ]
}
