{
    "title": "Json Based Smart Contract",
    "version": "0.1.0",
    "type": "flogo:trigger",
    "name": "tibco-json-smartcontract",
    "author": "TIBCO Software Inc.",
    "display": {
        "description": "Simple Json Based Smart Contract",
        "category": "SmartContract",
        "visible": true,
        "smallIcon": "icons/ic-tibco-dt-smartcontract.svg",
        "largeIcon": "icons/ic-tibco-dt-smartcontract@2x.png",
        "wizard": ["Step 1"]
    },
    "ref": "github.com/TIBCOSoftware/dovetail-contrib/trigger/json-smartcontract",
    "useReplyHandler": true,
    "settings": [],
    "handler": {
        "settings": [
            {
                "name": "OutputValidation",
                "type": "boolean",
                "required": false,
                "display": {
                    "description": "Selection for output validation, default false",
                    "name": "Output Validation"
                },
                "value": false
            }
        ]
    },
    "outputs": [
        {
            "name": "body",
            "type": "complex_object",
            "display": {
                "name": "Request Schema",
                "description": "The request schema of the trigger",
                "type": "texteditor",
                "syntax": "json"
            },
            "wizard": {
                "name": "Enter a JSON Schema or an example of your JSON message",
                "type": "texteditor",
                "syntax": "json",
                "step": "Step 1"
            }
        }
    ],
    "reply": [{
            "name": "code",
            "type": "integer"
        },
        {
            "name": "data",
            "type": "complex_object",
            "display": {
                "name": "Reply Data Schema",
                "description": "The reply data schema of the trigger",
                "type": "texteditor",
                "syntax": "json",
                "mappable": true
            }
        }
    ],
    "actions": [{
        "name": "Finish"
    }]
}