{
    "name": "mapper",
    "title": "Mapper",
    "version": "1.0.0",
    "type": "flogo:activity",
    "author": "TIBCO Software Inc.",
    "display": {
       "category": "SmartContract",
       "visible": true,
       "smallIcon": "mapper.png",
       "description": "This activity transform data"
    },
 
    "ref": "github.com/TIBCOSoftware/dovetail-contrib/go-model/SmartContract/activity/mapper",
    "inputs": [
        {
            "name": "model",
            "type": "string",
            "required": false,
            "display": {
                "name": "Common Data Model",
                "type": "dropdown",
                "selection":"single"
            },
            "allowed":[]
        },
        {
            "name": "dataType",
            "type": "string",
            "required": true,
            "allowed": ["Boolean","Datetime", "Double", "Integer", "Long", "String"],
            "display": {
                "name": "Result Data Type",
                "type": "dropdown",
                "selection": "single"
            },
            "value": "String"
        },
        {
            "name": "isArray",
            "type": "boolean",
            "required": true,
            "display":{
                "name": "Is Array",
                "description": "",
                "visible": true
            },
            "value": false
           },
           {
            "name": "inputArrayType",
            "type": "string",
            "required": true,
            "display":{
                "name": "Input Array Type",
                "type": "dropdown",
                "selection":"single",
                "description": "[{'f':'v'}] or ['v1', 'v2']",
                "visible": true
            },
            "allowed": ["Object Array", "Primitive Array"],
            "value": "Object Array"
           },
           {
            "name": "outputArrayType",
            "type": "string",
            "required": true,
            "display":{
                "name": "Output Array Type",
                "type": "dropdown",
                "selection":"single",
                "description": "[{'f':'v'}] or ['v1', 'v2']",
                "visible": true
            },
            "allowed": ["Object Array", "Primitive Array"],
            "value": "Object Array"
           },
        {
            "name": "precision",
            "type": "integer",
            "required":false,
            "display": {
                "name": "Precision",
                "visible": false
            }
            },
           {
                "name": "scale",
                "type": "integer",
                "required":false,
                "display": {
                    "name": "Scale",
                    "visible": false
                }
            },
            {
                "name": "rounding",
                "type": "string",
                "required":false,
                "allowed": ["UP", "DOWN", "CEILING", "FLOOR", "HALF_UP", "HALF_DOWN", "HALF_EVEN"],
                "display": {
                    "name": "Rounding rule",
                    "visible": false,
                    "type": "dropdown",
                    "selection": "single"
                },
                "value": "HALF_EVEN"
            },
            {
                "name": "format",
                "type": "string",
                "required":false,
                "display": {
                    "name": "Datetime format",
                    "visible": false
                },
                "value": "yyyy-MM-dd HH:mm:ss ZZZ"
            },
        
        {
            "name": "input",
            "type": "complex_object",
            "display":{
                "name": "Input Schema",
                "type": "texteditor",
                "syntax": "json",
                "mappable":true,
                "readonly":true
            }
        },
        {
            "name": "userInput",
            "type": "complex_object",
            "display":{
                "name": "Input Schema",
                "type": "texteditor",
                "syntax": "json",
                "mappable":true
            }
        }
    ],
  
    "outputs": [
        {
            "name": "output",
            "type": "complex_object",
            "required": true
        }
    ]
}
