{
    "name": "wallet",
    "title": "Cash Wallet",
    "version": "1.0.0",
    "type": "flogo:activity",
    "author": "TIBCO Software Inc.",
    "display": {
       "category": "CorDApp",
       "visible": true,
       "smallIcon": "wallet.png",
       "description": "cash related operations"
    },
 
    "ref": "github.com/TIBCOSoftware/dovetail-contrib/CorDApp/activity/wallet",
    "inputs": [
            {
                "name": "currency",
                "type": "string",
                "required": true,
                "display": {
                    "name": "Payment Currency",
                    "type": "dropdown",
                    "selection":"single"
                },
                "allowed":["USD", "EUR"]
            },
           {
                "name": "value",
                "type": "integer",
                "required": true,
                "display":{
                    "name": "Payment Amount",
                    "type": "integer"
                },
                "value": 1
           },
           {
            "name": "abortNotEnoughFunds",
            "type": "boolean",
            "required": true,
            "display":{
                "name": "Error if not enough funds?",
                "description": "If true, the activity will abort if not enough founds found in wallet",
                "type": "boolean"
            },
            "value": true
           },
           {
                "name": "input",
                "type": "complex_object",
                "required": false,
                "mappable":true
           }
    ],
  
    "outputs": [
        {
            "name": "output",
            "type": "complex_object",
            "required": true,
            "value": {
                "metadata": "",
                "value": "{\"hasEnoughFund\":true, \"fundsToUse\":[{\"amt\":{\"currency\":\"\", \"quantity\":0}, \"issuer\":\"\", \"owner\":\"\"}], \"paidTo\":[{\"amt\":{\"currency\":\"\", \"quantity\":0}, \"issuer\":\"\", \"owner\":\"\"}] \"change\":{\"amt\":{\"currency\":\"\", \"quantity\":0}, \"issuer\":\"\", \"owner\":\"\"}}"
            }
        }
    ]
}
