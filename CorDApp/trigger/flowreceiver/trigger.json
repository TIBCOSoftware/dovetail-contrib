{
    "name": "R3FlowReceiver",
    "author": "TIBCO Software Inc.",
    "type": "flogo:trigger",
    "version": "1.0.0",
    "title": "CorDApp Flow Receiver",

    "display": {
       "description": "Create a flow",
       "uid": "r3-flow-receiver",
       "category": "CorDApp",
       "visible": true, 
       "smallIcon": "trigger.png",
       "largeIcon": "trigger.png"
    },
    "ref": "github.com/TIBCOSoftware/dovetail-contrib/CorDApp/trigger/flowreceiver",
         
    "settings": [
        {
            "name": "flowType",
            "type":"string",
            "required":true,
            "display":{
                "visible":false
            },
            "value":"receiver"
        }
    ],
 
    "handler": {
      "settings": [
        {
            "name": "useConfidentialIdentity",
            "type": "boolean",
            "required": true,
            "display": {
                "name": "Use confidential identitiies for this transaction?",
                "visible": true
            },
            "value": true
        },
        {
            "name": "initiatorFlow",
            "type":"string",
            "required":true,
            "display":{
                "name": "Specify Initiator flow name",
                "visible":true
            }
        }
     ]
    },
    "outputs": [
    ],
    "actions": [
          {
            "name": "Finish"
          }
    ]
}