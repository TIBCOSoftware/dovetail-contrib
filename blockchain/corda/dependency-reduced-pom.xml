      <artifactId>corda-node-driver</artifactId>
      <version>2.0.0</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>cordform-common</artifactId>
          <groupId>net.corda.plugins</groupId>
        </exclusion>
        <exclusion>
          <artifactId>quasar-core</artifactId>
          <groupId>co.paralleluniverse</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>com.tibco.cp</groupId>
      <artifactId>kotlin-IOU</artifactId>
      <version>2.1.0</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.global.citizens.net</groupId>
