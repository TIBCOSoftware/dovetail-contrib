{
    "name": "collection",
    "title": "Collection",
    "version": "1.0.0",
    "type": "flogo:activity",
    "author": "TIBCO Software Inc.",
    "display": {
       "category": "General",
       "visible": true,
       "smallIcon": "collection.png",
       "description": "This activity performe actions on collections of data"
    },
 
    "ref": "github.com/TIBCOSoftware/dovetail-contrib/General/activity/collection",
    "inputs": [
            {
                "name": "operation",
                "type": "string",
                "required": true,
                "allowed": ["COUNT", "DISTINCT", "FILTER", "INDEXING", "MERGE", "REDUCE-JOIN"],
                "display":{
                    "name": "Operation",
                    "description": "operations to perform",
                    "type": "dropdown",
                    "selection": "single"
                },
                "value": "DISTINCT"
           },
           {
                "name": "model",
                "type": "string",
                "required": false,
                "display": {
                    "name": "Common Data Model",
                    "type": "dropdown",
                    "selection":"single"
                },
                "allowed":[]
            },
           {
               "name": "dataType",
               "type": "string",
               "required":true,
               "allowed": ["String"],
               "display": {
                    "name": "Collection Data Type",
                    "type": "dropdown",
                    "selection": "single"
               },
               "value": "String"
           },
           {
            "name": "delimiter",
            "type": "string",
            "required":false,
            "display": {
                 "name": "Delimiter"
            },
            "value": ","
            },
            {
                "name": "filterFieldType",
                "type": "string",
                "required":false,
                "display": {
                     "name": "Filter Field Type",
                     "type":"dropdown",
                     "selection":"single"
                },
                "allowed":[ "Boolean","Integer", "Long", "String"],
                "value":"String"
            },
            {
                "name": "filterFieldOp",
                "type": "string",
                "required":false,
                "display": {
                     "name": "Filter Operation",
                     "type":"dropdown",
                     "selection":"single"
                },
                "allowed":[ "==",">", ">=", "<", "<=", "!=", "IN"],
                "value":"=="
            },
           {
            "name": "input",
            "type": "complex_object",
            "display":{
                "name": "Input Schema",
                "type": "texteditor",
                "syntax": "json",
                "mappable":true,
                "readonly":true
            }
        },
        {
            "name": "userInput",
            "type": "complex_object",
            "display":{
                "name": "Input Schema",
                "type": "texteditor",
                "syntax": "json",
                "mappable":true
            }
        }

    ],
  
    "outputs": [
        {
            "name": "output",
            "type": "complex_object"
           }
    ]
}
