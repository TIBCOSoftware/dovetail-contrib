{
    "name": "simplevaultquery",
    "title": "Simple Vault Query",
    "version": "1.0.0",
    "type": "flogo:activity",
    "author": "TIBCO Software Inc.",
    "display": {
       "category": "CorDApp",
       "visible": true,
       "smallIcon": "query.png",
       "description": "Get contract state from the vault"
    },
 
    "ref": "github.com/TIBCOSoftware/dovetail-contrib/CorDApp/activity/simplevaultquery",
    "inputs": [
            {
                "name": "model",
                "type": "string",
                "required": true,
                "display": {
                    "name": "Select the contract",
                    "type": "dropdown",
                    "selection":"single"
                },
                "allowed":[]
            },
            {
                    "name": "assetName",
                    "type": "string",
                    "required": true,
                    "display":{
                        "name": "Asset",
                        "type": "dropdown",
                        "selection": "single"
                    },
                    "allowed": []
            },
           {
                "name": "status",
                "type": "string",
                "required": true,
                "display":{
                    "name": "Contract state status",
                    "type": "dropdow",
                    "selection": "single"
                },
                "value": "UNCONSUMED",
                "allowd": ["CONSUMED", "UNCONSUMED"]
           },
           {
            "name": "assetType",
            "type": "string",
            "required": true,
            "display":{
                "name": "Contract state type",
                "description": "Is this a linear state or fungible asset?",
                "type": "dropdow",
                "selection":"single"
            },
            "value": "LinearState",
            "allowed":["FungibleAsset", "LinearState"]
           },
           {
                "name": "input",
                "type": "complex_object",
                "required": true
           }
    ],
  
    "outputs": [
        {
            "name": "output",
            "type": "complex_object",
            "required": true
        },
        {
            "name": "size",
            "type": "integer",
            "required": true
        }
    ]
}
